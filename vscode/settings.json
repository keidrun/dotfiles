{
  // User Settings
  // == Layout ==
  "workbench.colorTheme": "Noctis Azureus",
  "workbench.iconTheme": "material-icon-theme",
  // == Common ==
  "telemetry.enableCrashReporter": false,
  "editor.fontFamily": "Ricty Diminished",
  "terminal.integrated.fontFamily": "Ricty Diminished",
  "window.zoomLevel": 1,
  "editor.fontSize": 14,
  "editor.tabSize": 2,
  "workbench.editor.showTabs": true,
  "editor.renderWhitespace": "all",
  "editor.insertSpaces": true,
  "editor.lineNumbers": "on",
  "editor.detectIndentation": true,
  "editor.minimap.enabled": false,
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 120,
  "editor.rulers": [
    120
  ],
  "editor.parameterHints.enabled": true,
  "editor.autoClosingBrackets": "always",
  "editor.autoIndent": true,
  "editor.suggestOnTriggerCharacters": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.snippetSuggestions": "inline",
  "editor.selectionHighlight": true,
  "editor.occurrencesHighlight": true,
  "editor.mouseWheelZoom": false,
  "editor.renderControlCharacters": true,
  "editor.renderIndentGuides": false,
  "editor.renderLineHighlight": "all",
  "editor.codeLens": true,
  "editor.folding": true,
  "editor.matchBrackets": true,
  "editor.trimAutoWhitespace": true,
  "files.trimTrailingWhitespace": true,
  "diffEditor.ignoreTrimWhitespace": true,
  "files.encoding": "utf8",
  "files.autoGuessEncoding": false,
  "files.eol": "\n",
  "workbench.startupEditor": "newUntitledFile",
  "explorer.confirmDragAndDrop": false,
  "editor.multiCursorModifier": "ctrlCmd",
  // == Terminal ==
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.letterSpacing": 0,
  "terminal.integrated.lineHeight": 1,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": false,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.rightClickBehavior": "copyPaste",
  // == Plugins ==
  // final-newline
  "files.insertFinalNewline": true,
  // Mark Jump
  "markJump.maximumLimit": -1,
  // Live Server
  "liveServer.settings.donotShowInfoMsg": true,
  // == Git==
  // Git Project Manager
  "gitProjectManager.baseProjectsFolders": [
    "$HOME/workspace"
  ],
  // == Python ==
  "[python]": {
    "editor.tabSize": 4,
  },
  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.maxNumberOfProblems": 100,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": false,
  "python.linting.pep8Enabled": false,
  "python.linting.pylamaEnabled": false,
  "python.linting.pylintEnabled": false,
  // == JS and Typescripts ==
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": false,
  "typescript.validate.enable": false,
  // default format
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  // prettier and eslint for javascript
  "[javascript]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },
  "[typescript]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },
  // eslint for prettier
  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.alwaysShowStatus": true,
  // tslint for prettier
  // "typescript.tsdk": "node_modules/typescript/lib",
  "tslint.enable": true,
  "tslint.autoFixOnSave": true,
  "tslint.alwaysShowStatus": true,
  // Jest
  "jest.autoEnable": false,
  "jest.rootPath": "client",
  // Emmet for JSX/Vue
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue-html": "html"
  },
  "emmet.syntaxProfiles": {
    "html": {
      "filters": "bem"
    }
  },
  // == HTML ==
  "html.format.enable": true,
  // == CSS ==
  // "stylelint.enable": true,
  "css.validate": false,
  "scss.validate": true,
  "postcss.validate": true,
  "css_peek.enable": false,
  // == Python==
  "python.formatting.autopep8Args": [
    "--indent-size=4"
  ],
  // == Golang ==
  "[go]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },
  "go.formatTool": "goreturns",
  "go.formatFlags": [
    "-w"
  ],
  "go.lintTool": "golint",
  "go.lintOnSave": "package",
  "go.vetOnSave": "package",
  "go.buildOnSave": "package",
  "go.testOnSave": false,
  "go.gocodeAutoBuild": true,
  "go.installDependenciesWhenBuilding": true,
}
